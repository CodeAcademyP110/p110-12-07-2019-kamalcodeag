        </div>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var blogItem in Model.BlogItems)
            {
                <div class="col-md-6">
                    <div class="blog d-block d-lg-flex">
                        <div class="bg-image" style="background-image: url('img/@blogItem.Image');"></div>
                        <div class="text">
                            <h3>@blogItem.Title</h3>
                            <p class="sched-time">
                                <span><span class="fa fa-calendar"></span> @blogItem.Date.ToShortDateString()</span> <br>
                            </p>
