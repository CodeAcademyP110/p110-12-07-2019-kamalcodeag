<section class="section element-animate">

    <div class="clearfix mb-5 pb-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center heading-wrap">
                    <h2>@Model.TestimonialTypography.Title</h2>
                    <span class="back-text">@Model.TestimonialTypography.SubTitle</span>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var testimonialItem in Model.TestimonialItems)
            {
                <div class="col-md-4">
                    <blockquote class="testimonial">
                        <p>&ldquo; @testimonialItem.Speech &rdquo;</p>
                        <div class="d-flex author">
                            <img src="img/@testimonialItem.Image" alt="" class="mr-4">
                            <div class="author-info">
                                <h4>@testimonialItem.Author</h4>
                                <p>@testimonialItem.Profession</p>
                            </div>
                        </div>
                    </blockquote>
                </div>
            }
        </div>
    </div>
</section> <!-- .section -->


<section class="section element-animate">
    <div class="clearfix mb-5 pb-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center heading-wrap">
                    <h2>@Model.BlogTypography.Title</h2>
                    <span class="back-text">@Model.BlogTypography.SubTitle</span>
                </div>
