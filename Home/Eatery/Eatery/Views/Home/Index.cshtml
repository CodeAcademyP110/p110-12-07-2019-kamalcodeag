@model  HomeVM

    <section class="home-slider owl-carousel">
        @foreach (var mainSlider in Model.MainSliders)
        {
            <div class="slider-item" style="background-image: url('img/@mainSlider.Background');">

                <div class="container">
                    <div class="row slider-text align-items-center justify-content-center">
                        <div class="col-md-8 text-center col-sm-12 element-animate">
                            <h1>@mainSlider.Title</h1>
                            <p class="mb-5">@mainSlider.Info</p>
                            <p><a href="#" class="btn btn-white btn-outline-white">Get Started</a></p>
                        </div>
                    </div>
                </div>

            </div>
        }
    </section>
<!-- END slider -->


<section class="section bg-light element-animate">
    <div class="container">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-6 mb-4 mb-lg-0 col-lg-3 text-center">
                    <span class="@product.Image display-4 text-black d-block mb-4"></span>
                    <h4 class="mb-4 text-primary">@product.Title</h4>
                    <p>@product.Info</p>
                </div>
            }
        </div>
    </div>
</section>



<section class="section element-animate">

    <div class="clearfix mb-5 pb-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center heading-wrap">
                    <h2>@Model.DishTypography.Title</h2>
                    <span class="back-text">@Model.DishTypography.SubTitle</span>
                </div>
            </div>
        </div>
    </div>

    <div class="owl-carousel centernonloop">
        @foreach (var dishItem in Model.DishItems)
        {
            <a href="#" class="item-dishes">
                <div class="text">
                    <p class="dishes-price">$@dishItem.Price</p>
                    <h2 class="dishes-heading">@dishItem.Ingredient</h2>
                </div>
                <img src="img/@dishItem.Image" alt="" class="img-fluid">
            </a>
        }

    </div>
</section> <!-- .section -->



