@model  MainSlider

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" style="padding-top:20px;">
    <div class="col-12">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <img src="~/img/@Model.Background" width="200"/>
            </div>
            <div class="form-group">
                <label asp-for="Photo" style="display:block;">Arxa fon şəkli</label>
                <input asp-for="Photo" />
                <span asp-validation-for="Photo"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" style="display:block;">Başlıq</label>
                <input asp-for="Title" style="width:50%;" value="@Model.Title"/>
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info" style="display:block;">Mətn</label>
                <textarea asp-for="Info" rows="5" style="width:50%;" placeholder="@Model.Info"></textarea>
                <span asp-validation-for="Info"></span>
            </div>
            <input type="submit" value="Düzəliş et" class="btn btn-success" />
        </form>
    </div>
</div>


