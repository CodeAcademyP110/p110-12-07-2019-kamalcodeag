@model Slider

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <img style="height: 400px" class="img-thumbnail" src="~/img/@Model.Image" />
        </div>
    </div>
</div>

<form method="post">
    <div class="alert alert-danger">
        <p style="padding-top: 0;"><b>Are you sure to delete this beautiful slider?</b></p>
    </div>
    <input type="submit" class="btn btn-danger btn-block btn-lg" value="Delete" />
</form>

<div class="row">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0;">
            <i class="fas fa-long-arrow-alt-left"></i> Back to Index
        </a>
    </div>
</div>

